{
  "name": "thp_nrw",
  "version": "1.0.0",
  "private": true,
  "description": "Tech Hilfe Pro \u2013 accessible, secure IT support experiences for NRW SMEs and households.",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "packageManager": "npm@10.7.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest",
    "test:ci": "vitest run",
    "coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ci": "playwright test --reporter=list",
    "validate:security": "node ./scripts/validate-security-txt.mjs",
    "sbom:cyclonedx": "npm sbom --format=cyclonedx --output=sbom-cyclonedx.json",
    "sbom:spdx": "npm sbom --format=spdx --output=sbom-spdx.json",
    "prepare": "husky",
    "build:cf": "npx @opennextjs/cloudflare build",
    "deploy:cf": "npx @opennextjs/cloudflare deploy",
    "preview:cf": "npx wrangler dev --local"
  },
  "dependencies": {
    "autoprefixer": "10.4.19",
    "clsx": "2.1.1",
    "framer-motion": "11.0.0",
    "next": "15.5.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "stripe": "16.11.0",
    "tailwindcss": "4.0.0"
  },
  "overrides": {
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@axe-core/playwright": "1.8.0",
    "@opennextjs/cloudflare": "0.5.0",
    "@playwright/test": "1.49.0",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.4.2",
    "@testing-library/react": "15.0.0",
    "@testing-library/user-event": "14.5.2",
    "@types/node": "22.7.4",
    "@types/react": "18.3.4",
    "@types/react-dom": "18.3.2",
    "@typescript-eslint/eslint-plugin": "8.6.0",
    "@typescript-eslint/parser": "8.6.0",
    "@vitejs/plugin-react": "4.3.3",
    "@vitest/coverage-v8": "2.1.3",
    "axe-core": "4.10.1",
    "eslint": "9.9.1",
    "eslint-config-next": "15.0.0",
    "husky": "9.1.6",
    "jsdom": "24.1.0",
    "lint-staged": "15.2.10",
    "typescript": "5.6.3",
    "vite-tsconfig-paths": "5.1.1",
    "vitest": "2.1.3",
    "vitest-axe": "0.4.1",
    "wrangler": "3.99.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix --max-warnings=0"
    ],
    "*.{ts,tsx}": [
      "bash -lc \"tsc --noEmit --pretty false --project tsconfig.json\""
    ]
  }
}
